<div class="container">
 <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
 <div class="row">

    <p><%= notice %></p>

    <h1>ブログ一覧</h1>

    <% @pictures.each do |picture| %>
      <p>ユーザー名:<%= picture.user.name %></p>
      <p>写真:<%= image_tag(picture.image_url) %></p>
      <p>タイトル:<%= picture.title %></p>
      <p>本文:<%= picture.content %></p>
      <%= link_to "編集", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to '削除', picture_path(picture.id), data: { confirm: '本当に削除していいですか？' }, method: :delete, class: 'btn btn-default btn-sm btn btn-danger' %>
    <% end %>

  </div>
 </div>
</div>