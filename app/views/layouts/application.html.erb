<!DOCTYPE html>
<html>
<head>
  <title>Curry Photo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
</head>

<body>
<header>
  <div class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href="/" class="navbar-brand">Curry Photo</a>
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse" id="navbar-main">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to "Top", root_path %></li>
        　<li><%= link_to "写真投稿", pictures_path %></li>
　　　　　<% if user_signed_in? %>
　　　　　　<li><%= link_to 'マイページ', edit_user_registration_path %></li>
  　　　　　　　　<li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
　　　　　<% else %>
  　　　　　　<li><%= link_to 'ログイン', new_user_session_path  %></li>
　　　　　  <li><%= link_to 'サインアップ', new_user_registration_path %></li>
　　　　　<% end %>
        </ul>
      </div>
    </div>
  </div>
</header>

<%= yield %>

</body>
</html>